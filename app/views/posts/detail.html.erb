<h2>釣果投稿詳細</h2>
<div class="index-content">
  <div class="row">
    <div class='col-lg-8'>
      <div class='card'>
        <img src=<%=@post.image_url%>>
      </div>
    </div>
    <div class='col-lg-4'>
      <h4>魚種：</h4>
      <h4><%=@post.fish_name%></h4>
      <br>
      <h4>釣行日時：</h4>
      <h4><%=@post.datetime%></h4>
      <br>
      <h4>場所：</h4>
      <h4><%=@post.point.fullname%></h4>
      <br>
      <h4>重量：</h4>
      <h4><%=@post.weight_gram%>g</h4>
      <br>
      <h4>サイズ：</h4>
      <h4><%=@post.size_centimeter%>cm</h4>
      <br>
      <h4>ヒットルアー；</h4>
      <h4><%=@post.lure.name%></h4>
      <br>
      <h4>ユーザーID：</h4>
      <h4><%=@post.user_id%></h4>
    </div>
  </div>
  <div class='row'>
    <div class="col-lg-12">
      <h2>関連釣果</h2>
    </div>
  </div>
  <div class="row">
    <%col_count=0%>
    <%@associated_posts.each do |post|%>
      <%break if col_count == 4%>
      <div class="col-lg-3">
        <div class="card div-link">
          <img src=<%=post.image_url%>>
          <p><%=post.fish_name%></p>
          <p><%=post.datetime%></p>
          <p><%=post.size_centimeter%></p>
          <p><%=post.weight_gram%></p>
          <p><%=post.point.fullname%></p>
          <p><%=post.image_name%></p>
          <p><%=post.lure.name%></p>
          <p><%=post.user_id%></p>
          <%= link_to '', "/posts/#{post.id}", { :class => 'link' , :method => :get} %>
        </div>
      </div>
      <%col_count+=1%>
    <%end%>
  </div>
</div>
