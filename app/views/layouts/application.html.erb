<!DOCTYPE html>
<html>
  <head>
    <title>MyApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'posts', :media => 'all' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-default">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navigation">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to "FishingSNS", { :controller => "home", :action => "index" }, { :class => "navbar-brand" }  %>
        </div>
        <div class="collapse navbar-collapse" id="navigation">
          <% if @current_user %>
            <p class="navbar-text navbar-right"><%=@current_user.name%></p>
            <%= link_to "ログアウト", "/logout", { :class => "navbar-text navbar-right" , :method => :post} %>
            <%= link_to "釣果投稿", "/posts/new", { :class => "navbar-text navbar-right" , :method => :get} %>
          <% else %>
            <%= link_to "ログイン", "/login", { :class => "navbar-text navbar-right" }  %>
            <%= link_to "新規登録", "/signup", { :class => "navbar-text navbar-right" }  %>
          <% end %>
          <%= link_to "釣果一覧", "/posts/index", { :class => "navbar-text navbar-right" }  %>
          <%= link_to "アラートテスト", "/tests/alert", { :class => "navbar-text navbar-right" }  %>
        </div>
      </div>
    </nav>
    <div class="container">
      <% if flash[:notice] %>
        <div class="alert alert-success text-center" role="alert">
          <%= flash[:notice] %>
        </div>
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>
